---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import LiLink from "@/components/LiLink.astro";

const resources = await getCollection("resources");
---

<Layout title="Resources" description="A collection of resources reccomended by us.">
  <main class="md:max-w-screen-lg md:mx-auto mx-4 py-6">
    <h1 class="text-2xl md:text-3xl font-semibold">Resources</h1>
    <p>
      This page has a list of all the resources we reccomend. This could be
      websites, documents, etc. Feel free to add your own on github. <i
        >Please note: all links on this page are not affiliated with us and go
        to external websites.</i
      >
    </p>
    <div class="py-8 flex flex-col gap-6">
      {
        resources.map((category) => (
          <div>
            <h3 class="text-xl font-semibold">{category.data.title}</h3>
            <p class="pb-2">{category.data.description}</p>
            <ul class="grid grid-cols-1 md:grid-cols-3 gap-2 items-center">
              {category.data.links.map((link) => (
                <LiLink href={link.url} {...link} />
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </main>
</Layout>
