---
import { Icon } from "astro-icon/components";
import Button from "./Button.astro";
import Badge from "./Badge.astro";

interface Props {
  title: string;
  description: string;
  link: string;
  category: string;
  pricingModel: string;
  Content: any;
}
const { title, description, link, category, pricingModel, Content } =
  Astro.props;
---

<li
  data-category={category}
  data-price={pricingModel}
  class="shadow border border-neutral-200 px-4 py-4 rounded h-full justify-between flex-col flex"
>
  <div>
    <h2 class="p-0 m-0 text-2xl font-semibold">{title}</h2>
    <p class="truncate">{description}</p>
    <Badge className="capitalize">{category}</Badge>
    <Badge className="capitalize">{pricingModel}</Badge>
    <div class="prose prose-h2:mb-2 prose-h3:mb-1 prose-p:mb-1 py-4">
      <Content />
    </div>
  </div>
  <Button href={link} variant="outline" className="w-full">View Tool</Button>
</li>
