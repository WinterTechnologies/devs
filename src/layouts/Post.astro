---
import Layout from "./Layout.astro";
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  description: string;

  backLink?: string;
  backText?: string;
}
const { title, description, backLink, backText } = Astro.props;
---

<Layout title={title} description={description}>
  <article class="prose lg:prose-xl md:max-w-screen-sm md:mx-auto mx-4 py-4">
    {
      backLink && (
        <a
          href={backLink}
          class="text-sm text-neutral-500 hover:text-black inline-flex gap-1 items-center mb-4 duration-100"
        >
          <Icon name="lucide:arrow-left" /> {backText || "Back"}
        </a>
      )
    }
    <slot />
  </article>
</Layout>
